{
  "name": "savescum",
  "version": "0.1.3",
  "description": "A command-line tool & webinterface, to efficiently save scum on a jailbroken PS4.",
  "keywords": [
    "bloodborne",
    "ftp",
    "goldhen",
    "playstation4",
    "ps4",
    "save-game",
    "savescum"
  ],
  "homepage": "https://savescum.jrson.me",
  "bugs": {
    "url": "https://github.com/jrson83/savescum/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jrson83/savescum.git",
    "directory": "packages/savescum"
  },
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.cjs.js",
    "./package.json": "./package.json"
  },
  "main": "dist/index.cjs.js",
  "bin": {
    "savescum": "bin/savescum.js"
  },
  "files": ["bin", "dist"],
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "tsx src/index.ts",
    "build": "ptsup",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@savescum/web": "workspace:*"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^10.0.3",
    "@fastify/static": "^6.10.1",
    "@fastify/type-provider-json-schema-to-ts": "^2.2.2",
    "basic-ftp": "^5.0.3",
    "commander": "^10.0.1",
    "fastify": "^4.17.0",
    "fastify-tsconfig": "^1.0.1",
    "json-schema-to-ts": "^2.8.2"
  },
  "engines": {
    "node": ">=16.14.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
