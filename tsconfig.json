{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "vitest", "vite"],
    "paths": {
      "savescum": ["./packages/savescum/src/index.ts"],
      "@savescum/web": ["./packages/web/src/index.ts"]
    }
  },
  "exclude": [
    "**/bin/**", "**/dist/**", "**/node_modules/**", "**/public/**",
    "**/__tests__/**"
  ]
}
